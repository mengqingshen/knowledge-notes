{
  "apps": [
    {
      "name": "notehub",
      "script": "server/main.js",
      "env": {
        "COMMON_VARIABLE": true
      },
      "env_production": {
        "NODE_ENV": "production",
        "PORT": "8082"
      },
      "instances": 3
    }
  ],
  "deploy": {
    "production": {
      "user": "saber",
      "host": ["47.93.14.9"],
      "port": "2012",
      "ref": "origin/master",
      "repo": "https://github.com/mengqingshen/knowledge-notes.git",
      "path": "/www/notehub.mengqingshen.com",
      "ssh_options": "StrictHostKeyChecking=no",
      "post-deploy": "npm install --registry=https://registry.npm.taobao.org && npm run build && pm2 startOrRestart ecosystem.json --env production",
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}